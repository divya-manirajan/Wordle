TRIES = 5
COUNT = 0

from random_word import random_word

key = random_word.upper() #random 5 letter word

#guess = "JELLO" #input by user

while COUNT < TRIES:
    guess = input("Enter a 5 letter guess: ").upper()
    if guess == key:
        print("You got it!")
        break
    while len(guess) != 5:
        guess = input("Try Again. Enter a 5 letter guess: ").upper()
    for i in range (5):
        if guess[i] == key[i]:
            print(guess[i] + "|GREEN|")
        elif guess[i] in key:
            print(guess[i] + "|YELLOW|")
        else:
            print(guess[i] + "|GRAY|")
    COUNT += 1
    
if COUNT == TRIES:
    print("Ran out of tries")
    print("Word was: "+key)
